{
  "name": "agent-max-desktop",
  "version": "1.0.0",
  "description": "Desktop application for Agent Max Memory System V2",
  "main": "electron/main.cjs",
  "author": "Colin O'Brien",
  "homepage": "https://agentmax.app",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && NODE_ENV=development electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:linux": "npm run build && electron-builder --linux",
    "generate:icons": "chmod +x generate-icons.sh && ./generate-icons.sh",
    "postinstall": "electron-builder install-app-deps",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:jest": "jest",
    "test:jest:watch": "jest --watch",
    "test:jest:coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.jsx,.cjs",
    "lint:fix": "eslint . --ext .js,.jsx,.cjs --fix",
    "stylelint": "stylelint \"src/**/*.css\"",
    "stylelint:fix": "stylelint \"src/**/*.css\" --fix",
    "test:a11y": "node scripts/test-a11y.js",
    "test:vr": "node scripts/test-visual-regression.js",
    "test:perf": "node scripts/test-performance.js",
    "test:glass-fallbacks": "node scripts/test-glass-fallbacks.js",
    "test:screenshot": "node scripts/test-screenshot.js",
    "ui:preview": "open test-glass-ui.html",
    "format": "prettier --write \"**/*.{js,jsx,cjs,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,cjs,json,css,md}\""
  },
  "build": {
    "appId": "com.agentmax.desktop",
    "productName": "Agent Max",
    "copyright": "Copyright Â© 2025 Colin O'Brien",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "mac": {
      "icon": "build/icon.icns",
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "resources/entitlements.mac.plist",
      "entitlementsInherit": "resources/entitlements.mac.plist"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "@sentry/electron": "^7.2.0",
    "@tanstack/react-query": "^5.13.4",
    "axios": "^1.6.2",
    "axios-retry": "^4.5.0",
    "better-sqlite3": "^9.2.2",
    "clsx": "^2.0.0",
    "date-fns": "^3.0.6",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "keytar": "^7.9.0",
    "lucide-react": "^0.294.0",
    "node-machine-id": "^1.1.12",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-draggable": "^4.4.6",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^7.9.4",
    "tailwind-merge": "^2.1.0",
    "uuid": "^13.0.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.3",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@eslint/js": "^9.37.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^1.0.4",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.0.0",
    "playwright": "^1.40.1",
    "postcss": "^8.4.32",
    "prettier": "^3.6.2",
    "puppeteer": "^21.11.0",
    "stylelint": "^16.1.0",
    "stylelint-config-standard": "^36.0.0",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.8",
    "vitest": "^1.0.4",
    "wait-on": "^7.2.0"
  }
}
